<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mangaxdroid">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/mangaxdroid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mangaxdroid"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ReadChapterActivity" />
        <activity android:name=".MangaInfoActivity" />
        <activity android:name=".CategoriesActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>