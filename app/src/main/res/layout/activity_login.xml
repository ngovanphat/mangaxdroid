<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tealbackground1"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Manga x Droid"
        android:textAlignment="center"
        android:textColor="#00a7a7"
        android:textSize="55sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="#00a7a7"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:hint="Email" />

    <EditText
        android:id="@+id/editPasword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:hint="Mật khẩu"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="#00a7a7"/>

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="#00a7a7"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Đăng nhập" />

    <Button
        android:id="@+id/buttonFacebook"
        android:layout_width="260dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/facebookicon"
        android:background="#ff3b5998"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Đăng nhập bằng Facebook" />

    <Button
        android:id="@+id/buttonGoogle"
        android:layout_width="260dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/googleicon"
        android:background="#db3236"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Đăng nhập bằng Google" />

    <TextView
        android:id="@+id/forgotPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/aqua"
        android:textAlignment="center"
        android:text="Quên mật khẩu ?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:text="Bạn chưa có tài khoản ?" />

        <TextView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/aqua"
            android:text="Đăng ký" />
    </LinearLayout>

</LinearLayout>