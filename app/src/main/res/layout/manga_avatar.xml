<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/imageviewMangaAvatar"
        android:layout_width="180dp"
        android:layout_height="220dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/textviewMangaNameAvatar"
            android:paddingVertical="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:text="Tên truyện"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewCategoryMangaAvatar"
            android:paddingVertical="5dp"
            android:fontFamily="sans-serif"
            android:text="Thể loại: "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewCountMangaAvatar"
            android:paddingVertical="5dp"
            android:textSize="17dp"
            android:text="999M"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewChapterMangaAvatar"
            android:paddingVertical="5dp"
            android:textSize="17dp"
            android:text="372"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>