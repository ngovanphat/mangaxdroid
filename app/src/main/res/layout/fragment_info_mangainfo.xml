<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/authorThumbnail"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:src="@drawable/author" />

        <TextView
            android:id="@+id/author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="Tác giả" />

        <TextView
            android:id="@+id/authorName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:text="Đang cập nhật" />

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stateThumbnail"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:src="@drawable/status" />

        <TextView
            android:id="@+id/state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="Tình trạng" />

        <TextView
            android:id="@+id/status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:text="Đang tiến hành" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/genreThumbnail"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:src="@drawable/tag" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="Thể loại" />

        <TextView
            android:id="@+id/genres"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:text="Genre 1 - Genre 2 - Genre 3 - Genre 4 - Genre 5 - Genre 6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/viewThumbnail"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:src="@drawable/view" />

        <TextView
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="Lượt xem" />

        <TextView
            android:id="@+id/views"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:text="00.000.000" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textviewContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:text="TextView"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>